<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        tools:layout_width="150dp"
        tools:layout_height="150dp"
        android:background="@drawable/rounded_corner_announcement"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:visibility="visible"
        android:visibility="gone"
        android:src="@drawable/image_icon" />
    <ImageView
        android:id="@+id/image_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="75dp"
        android:maxWidth="75dp"
        tools:layout_width="75dp"
        tools:layout_height="75dp"
        android:background="@drawable/rounded_corner_announcement"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:src="@drawable/image_icon"/>

    <TextView
        android:id="@+id/extra_images_text"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/rounded_corner_announcement"
        android:backgroundTint="@color/semi_transparent"
        android:gravity="center"
        tools:text="2+ more photos"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>



</RelativeLayout>